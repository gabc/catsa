# Page inexistante
ErrorDocument 404 http://localhost/Web/error?code=404

# erreur interne
ErrorDocument 500 http://localhost/Web/error?code=500

# Peut ne pas être nécessaire.
Options +FollowSymlinks
RewriteEngine on

# [L] = break... donc fin de htaccess
RewriteRule ^murales/(.*)$ ./murales.php?query=$1 [L]
RewriteRule ^tableaux/(.*)$ ./menuTableaux.php?query=$1 [L]


# Si le nom du fichier + ".php" est un fichier (-f)
RewriteCond  %{REQUEST_FILENAME}.php -f
# Alors, modifié le fichier par fichier.php
RewriteRule ^(.*)$ $1.php